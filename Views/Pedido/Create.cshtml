@model ProjectControlBodega.Models.Pedido

@{
    ViewData["Title"] = "Create";
}

<h1>Crear pedido</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Cliente" class="control-label"></label>
        <select name="ClientesId" id="ClientesId" class="form-control" asp-items="ViewBag.Clientes"></select>
        <span asp-validation-for="Cliente" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Empleado" class="control-label"></label>
        <select name="EmpleadosId" id="EmpleadosId" class="form-control" asp-items="ViewBag.Empleados"></select>
        <span asp-validation-for="Empleado" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Fecha" class="control-label"></label>
        <input asp-for="Fecha" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Compdeenvio" class="control-label"></label>
        <select name="CompaniaDeEnviosId" id="CompaniaDeEnviosId" class="form-control" asp-items="ViewBag.CompaniaDeEnvios"></select>
        <span asp-validation-for="Compdeenvio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}